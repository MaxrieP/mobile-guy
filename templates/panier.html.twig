{% extends "base.html.twig" %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1>Panier</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% if items | length > 0 %}
        <table>
            <thead>
            <tr>
                <th>Désignation</th>
                <th>Prix unitaire</th>
                <th>Quantité</th>
                <th>Total</th>
                <th></th>
            </tr>
            </thead>
            
            <tbody>
            {% for item in items %}
                <tr>
                    <td><a href="{{ path('product', {'slug':item.product.slug}) }}">{{ item.product.designation }}</a></td>
                    <td>
                        {{ item.product.price |format_currency('EUR', locale='de') }}
                    </td>
                    <td>
                        <a href="{{ path('remove_panier', {'id':item.product.id}) }}">-</a>
                        {{ item.quantity }}
                        <a href="{{ path('add_panier', {'id':item.product.id}) }}">+</a>
                    </td>
                    <td>{{ (item.product.price * item.quantity)|format_currency('EUR', locale='de') }}</td>
                    <td>
                        <a href="{{ path('delete_panier', {'id':item.product.id }) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td>Total :</td>
                <td></td>
                <td></td>
                <td>{{ total |format_currency('EUR', locale='de')}}</td>
            </tr>
            </tfoot>
        </table>

        <a href="{{ path('vider') }}">Vider le panier</a>
        <a href="{{ path('acheter') }}">Valider la commande</a>

    {% else %}
        <p>Panier vide</p>
    {% endif %}

{% endblock %}