{% extends "base.html.twig" %}

{% block title %}Panier{% endblock %}

{% block body %}

    {% if items | length > 0 %}
        <table>
            <thead>
            <tr>
                <th>Désignation</th>
                <th>Quantité</th>
                <th>Prix unitaire</th>
                <th>Total</th>
                <th></th>
            </tr>
            </thead>
            
            <tbody>
            {% for item in items %}
                <tr>
                    <td><a href="{{ path('product', {'slug':item.product.slug}) }}">{{ item.product.designation }}</a></td>
                    <td>{% if item.product.stock >= 1 %}
                            <p>Disponible</p>
                        {% else %}
                            <p>Indisponible</p>
                        {% endif %}</td>
                    <td>{{ item.product.price |format_currency('EUR', locale='de') }}</td>
                    <td>{{ (item.product.price * item.quantity)|format_currency('EUR', locale='de') }}</td>
                    <td><a href="{{ path('remove_panier', {'id':item.product.id }) }}">Supprimer</a></td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td>Total :</td>
                <td></td>
                <td></td>
                <td>{{ total |format_currency('EUR', locale='de')}}</td>
            </tr>
            </tfoot>
        </table>

    {% else %}
        <p>Panier vide</p>
    {% endif %}

{% endblock %}