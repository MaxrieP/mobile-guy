{% extends "base.html.twig" %}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Panier</title>
</head>
<body>
{% include 'header.html.twig' %}

    {% if items | length > 0 %}
        <table>
            <thead>
            <tr>
                <th>Désignation</th>
                <th>Quantité</th>
                <th>Prix unitaire</th>
                <th>Total</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.product.designation }}</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.product.price }}</td>
                    <td>{{ item.product.price * item.quantity}}</td>
                    <td><a href="{{ path('remove_panier', {'id':item.product.id }) }}">Supprimer</a></td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td>Total :</td>
                <td>{{ total }}</td>
            </tr>
            </tfoot>
        </table>

    {% else %}
        <p>Panier vide</p>
    {% endif %}

</body>
</html>